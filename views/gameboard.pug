extends includes/layout.pug
block content  
  div(class='col-lg-16')
    - var cartas = JSON.parse({cards}.cards);
    each val in cartas
      - var carta = JSON.parse(val);
      div(id=carta.nome class='col-lg-3')
        ul(class='list-group')
         
          -// nome da carta
          li(class='list-group-item')= carta.nome
            |  #[span(class='label label-warning') !{carta.tipo}]
            | #[a(href='#' class='label label-success' style='float: right;') Usar]
          
          -// custo da carta
          li(class='list-group-item')= 'Custo: '
            if carta.tipo == 'troca_defesa'
              |  #[span(class='badge') !{carta.custo_qtd.custo_qtd1} !{carta.custo.custo1}]
              span(class='badge') -!{carta.custo_qtd.custo_qtd2} !{carta.custo.custo2}
            else 
              |  #[span(class='badge') !{carta.custo_qtd} !{carta.custo}]
          
          -//ataque da carta
          if carta.tipo == 'ataque'
            li(class='list-group-item')= 'Ataque:'
              |  #[span(class='badge') !{carta.alvo_qtd}]

          -// efeito da carta
          if carta.tipo != 'ataque'
            li(class='list-group-item')= 'Efeito: '
              if carta.tipo == 'defesa' || carta.tipo == 'troca_defesa'
                | #[span(class='badge') +!{carta.alvo_qtd} HP !{carta.alvo}]
              else if carta.tipo == 'troca_ataque'
                |  #[span(class='badge') -!{carta.alvo_qtd.alvo_qtd1} HP c. inimigo]
                span(class='badge') +!{carta.alvo_qtd.alvo_qtd2} HP !{carta.alvo.alvo2}
              else if carta.tipo == 'recurso' || carta.tipo == 'magia'
                | #[span(class='badge') +!{carta.alvo_qtd} !{carta.alvo}]